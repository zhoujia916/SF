        <jackson.version>2.1.0</jackson.version>

        <project.webapp>src/main/webapp</project.webapp>
    </properties>
	
    <build>
        <finalName>LianChe</finalName>
        <plugins>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.7</version>
                <configuration>
                    <tmpDirectory>${project.basedir}/src/main/webapp/tmp</tmpDirectory>
                    <webAppSourceDirectory>${project.basedir}/src/main/webapp</webAppSourceDirectory>

                    <contextPath>/</contextPath>
                    <connectors>
                        <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                            <port>9080</port>
                            <maxIdleTime>30000</maxIdleTime>
                        </connector>
                    </connectors>
                    <stopKey>foo</stopKey>
                    <stopPort>9090</stopPort>
                    <scanIntervalSeconds>5</scanIntervalSeconds>

                    <systemProperties>
                        <systemProperty>
                            <name>org.mortbay.jetty.Request.maxFormContentSize</name>
                            <value>-1</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <encoding>utf-8</encoding>
                </configuration>
            </plugin>
        </plugins>


        <outputDirectory>${project.basedir}/src/main/webapp/WEB-INF/classes</outputDirectory>

        <testOutputDirectory>${project.basedir}/src/main/webapp/WEB-INF/test-classes</testOutputDirectory>
    </build>



